import { z } from 'zod';

export const orderSchema = z.object({
  orderType: z.enum(['RENT', 'SALE', 'RENT_TO_OWN']),
  outletId: z.string().min(1),
  customerId: z.string().optional(),
  orderItems: z.array(z.object({
    productId: z.string().min(1),
    quantity: z.number().positive(),
