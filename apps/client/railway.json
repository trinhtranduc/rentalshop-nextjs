{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && yarn install --frozen-lockfile && cd apps/client && yarn build"
  },
  "deploy": {
    "startCommand": "cd apps/client && NODE_ENV=production node server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

