{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/client/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd apps/client && ../../node_modules/.bin/next start -p 3000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "development": {
      "deploy": {
        "startCommand": "cd apps/client && yarn dev",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100
      }
    },
    "production": {
      "deploy": {
        "startCommand": "cd apps/client && ../../node_modules/.bin/next start -p 3000",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    }
  }
}