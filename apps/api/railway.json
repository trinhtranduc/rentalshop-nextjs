{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install --frozen-lockfile && npx prisma generate --schema=./prisma/schema.prisma && cd apps/api && yarn build"
  },
  "deploy": {
    "startCommand": "cd apps/api && NODE_ENV=production node .next/standalone/apps/api/server.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

