{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install --frozen-lockfile && yarn railway:generate && yarn build --filter=@rentalshop/api"
  },
  "deploy": {
    "startCommand": "node .next/standalone/apps/api/server.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

