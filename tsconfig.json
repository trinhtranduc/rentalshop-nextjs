{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "apps/**/src/**/*.ts",
    "apps/**/src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "**/node_modules",
    "**/dist",
    "**/.next",
    "**/*.tsx",
    "**/*.jsx"
  ]
} 