# ============================================================================
# PRODUCTION ENVIRONMENT
# ============================================================================
# This file is a TEMPLATE for production deployment
# Actual values should be set via hosting platform environment variables
# (Vercel, AWS, Railway, etc.)

NODE_ENV=production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL recommended for production
# Set this in your hosting platform:
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DATABASE_URL="${DATABASE_URL}"

# ============================================================================
# JWT CONFIGURATION (CRITICAL - Set Strong Secrets!)
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET="${JWT_SECRET}"
JWT_EXPIRES_IN="1d"

# ============================================================================
# NEXTAUTH CONFIGURATION (CRITICAL - Set Strong Secrets!)
# ============================================================================
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET="${NEXTAUTH_SECRET}"
NEXTAUTH_URL="${NEXTAUTH_URL}"

# ============================================================================
# API URLS (Production Domains)
# ============================================================================
CLIENT_URL="${CLIENT_URL}"
ADMIN_URL="${ADMIN_URL}"
API_URL="${API_URL}"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS="${CORS_ORIGINS}"

# ============================================================================
# FILE UPLOAD (Cloudinary for Production)
# ============================================================================
UPLOAD_PROVIDER="cloudinary"
CLOUDINARY_CLOUD_NAME="${CLOUDINARY_CLOUD_NAME}"
CLOUDINARY_API_KEY="${CLOUDINARY_API_KEY}"
CLOUDINARY_API_SECRET="${CLOUDINARY_API_SECRET}"
MAX_FILE_SIZE="10485760"

# ============================================================================
# EMAIL CONFIGURATION (Resend for Production)
# ============================================================================
EMAIL_PROVIDER="resend"
RESEND_API_KEY="${RESEND_API_KEY}"
EMAIL_FROM="${EMAIL_FROM}"

# ============================================================================
# REDIS CONFIGURATION (Optional but Recommended)
# ============================================================================
REDIS_URL="${REDIS_URL}"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL="warn"
LOG_FORMAT="json"

# ============================================================================
# FEATURE FLAGS (Production)
# ============================================================================
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_ANALYTICS="true"
ENABLE_DEBUG_LOGS="false"

# ============================================================================
# RATE LIMITING (Strict for Production)
# ============================================================================
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX="100"

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
STRIPE_PUBLISHABLE_KEY="${STRIPE_PUBLISHABLE_KEY}"
STRIPE_SECRET_KEY="${STRIPE_SECRET_KEY}"
STRIPE_WEBHOOK_SECRET="${STRIPE_WEBHOOK_SECRET}"

# ============================================================================
# MONITORING (Sentry)
# ============================================================================
SENTRY_DSN="${SENTRY_DSN}"
SENTRY_ENVIRONMENT="production"
