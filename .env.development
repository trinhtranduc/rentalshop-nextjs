# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local, .env.development, or .env.production
# and update the values according to your environment

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Local Development (SQLite for easy setup)
DATABASE_URL_LOCAL="file:./dev.db"

# Development Environment (PostgreSQL)
DATABASE_URL_DEV="postgresql://rentalshop_dev:dev_password@localhost:5432/rentalshop_dev"

# Production Environment (PostgreSQL)
DATABASE_URL_PROD="postgresql://username:password@your-prod-host:5432/rentalshop_prod"

# ========================================
# JWT CONFIGURATION
# ========================================

# Local Development
JWT_SECRET_LOCAL="local-jwt-secret-key-change-this"
JWT_EXPIRES_IN_LOCAL="7d"

# Development Environment
JWT_SECRET_DEV="dev-jwt-secret-key-$(openssl rand -hex 32)"
JWT_EXPIRES_IN_DEV="7d"

# Production Environment
JWT_SECRET_PROD="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN_PROD="1d"

# ========================================
# NEXTAUTH CONFIGURATION
# ========================================

# Local Development
NEXTAUTH_SECRET_LOCAL="local-nextauth-secret"
NEXTAUTH_URL_LOCAL="http://localhost:3000"

# Development Environment
NEXTAUTH_SECRET_DEV="dev-nextauth-secret-$(openssl rand -hex 32)"
NEXTAUTH_URL_DEV="https://dev.rentalshop.com"

# Production Environment
NEXTAUTH_SECRET_PROD="your-production-nextauth-secret"
NEXTAUTH_URL_PROD="https://rentalshop.com"

# ========================================
# API URLS
# ========================================

# Local Development
CLIENT_URL_LOCAL="http://localhost:3000"
ADMIN_URL_LOCAL="http://localhost:3001"
API_URL_LOCAL="http://localhost:3002"

# Development Environment
CLIENT_URL_DEV="https://dev.rentalshop.com"
ADMIN_URL_DEV="https://admin.dev.rentalshop.com"
API_URL_DEV="https://api.dev.rentalshop.com"

# Production Environment
CLIENT_URL_PROD="https://rentalshop.com"
ADMIN_URL_PROD="https://admin.rentalshop.com"
API_URL_PROD="https://api.rentalshop.com"

# ========================================
# FILE UPLOAD (CLOUDINARY)
# ========================================

# Local Development (Local storage)
UPLOAD_PROVIDER_LOCAL="local"
UPLOAD_PATH_LOCAL="./uploads"

# Development Environment
CLOUDINARY_CLOUD_NAME_DEV="your-dev-cloud-name"
CLOUDINARY_API_KEY_DEV="your-dev-api-key"
CLOUDINARY_API_SECRET_DEV="your-dev-api-secret"

# Production Environment
CLOUDINARY_CLOUD_NAME_PROD="your-prod-cloud-name"
CLOUDINARY_API_KEY_PROD="your-prod-api-key"
CLOUDINARY_API_SECRET_PROD="your-prod-api-secret"

# ========================================
# EMAIL CONFIGURATION
# ========================================

# Local Development (Console logging)
EMAIL_PROVIDER_LOCAL="console"
EMAIL_FROM_LOCAL="noreply@localhost"

# Development Environment
EMAIL_PROVIDER_DEV="resend"
RESEND_API_KEY_DEV="your-dev-resend-api-key"
EMAIL_FROM_DEV="noreply@dev.rentalshop.com"

# Production Environment
EMAIL_PROVIDER_PROD="resend"
RESEND_API_KEY_PROD="your-prod-resend-api-key"
EMAIL_FROM_PROD="noreply@rentalshop.com"

# ========================================
# REDIS CONFIGURATION (Caching & Sessions)
# ========================================

# Local Development
REDIS_URL_LOCAL="redis://localhost:6379"

# Development Environment
REDIS_URL_DEV="redis://your-dev-redis:6379"

# Production Environment
REDIS_URL_PROD="redis://your-prod-redis:6379"

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Local Development
LOG_LEVEL_LOCAL="debug"
LOG_FORMAT_LOCAL="pretty"

# Development Environment
LOG_LEVEL_DEV="info"
LOG_FORMAT_DEV="json"

# Production Environment
LOG_LEVEL_PROD="warn"
LOG_FORMAT_PROD="json"

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Local Development
CORS_ORIGIN_LOCAL="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# Development Environment
CORS_ORIGIN_DEV="https://dev.rentalshop.com,https://admin.dev.rentalshop.com"

# Production Environment
CORS_ORIGIN_PROD="https://rentalshop.com,https://admin.rentalshop.com"

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/disable features per environment
ENABLE_EMAIL_VERIFICATION_LOCAL="false"
ENABLE_EMAIL_VERIFICATION_DEV="true"
ENABLE_EMAIL_VERIFICATION_PROD="true"

ENABLE_ANALYTICS_LOCAL="false"
ENABLE_ANALYTICS_DEV="true"
ENABLE_ANALYTICS_PROD="true"

# ========================================
# RATE LIMITING
# ========================================

# Local Development
RATE_LIMIT_WINDOW_LOCAL="15m"
RATE_LIMIT_MAX_LOCAL="1000"

# Development Environment
RATE_LIMIT_WINDOW_DEV="15m"
RATE_LIMIT_MAX_DEV="500"

# Production Environment
RATE_LIMIT_WINDOW_PROD="15m"
RATE_LIMIT_MAX_PROD="100" 