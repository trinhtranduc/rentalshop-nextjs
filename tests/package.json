{
  "name": "@rentalshop/tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Rental Shop subscription validation",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:subscription": "jest subscription-validation",
    "test:admin": "jest admin-extension",
    "test:product-availability": "jest product-availability-actual",
    "test:duplicate-account": "jest duplicate-account-actual",
    "test:subscription-admin": "jest subscription-admin-actual",
    "test:all": "jest --verbose",
    "test:actual": "jest *-actual.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf dist coverage .jest-cache"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup/jest.setup.js"],
    "testMatch": [
      "<rootDir>/**/*.test.ts",
      "<rootDir>/**/*.test.js",
      "<rootDir>/**/*.spec.ts",
      "<rootDir>/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "../packages/**/*.{ts,tsx}",
      "!../packages/**/*.d.ts",
      "!../**/node_modules/**",
      "!../**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@rentalshop/(.*)$": "<rootDir>/../packages/$1/src",
      "^@/(.*)$": "<rootDir>/../apps/api/$1"
    },
    "testTimeout": 30000,
    "verbose": true
  }
}
