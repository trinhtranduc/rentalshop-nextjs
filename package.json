{
  "name": "rentalshop-nextjs",
  "version": "1.0.0",
  "description": "Rental Shop Next.js Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build --concurrency=12",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev --concurrency=12",
    "dev:client": "cd apps/client && yarn dev",
    "dev:admin": "cd apps/admin && yarn dev",
    "dev:api": "cd apps/api && yarn dev",
    "fresh:start": "yarn clean:all && yarn install:all && yarn dev:all",
    "clean:all": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/dist && rm -rf apps/*/dist && rm -rf .turbo",
    "install:all": "yarn install",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "db:seed": "node scripts/reset-and-seed-database-simple.js",
    "db:seed:full": "node scripts/reset-and-seed-database.js",
    "db:reset": "npx prisma db push --force-reset && node scripts/reset-and-seed-database-simple.js",
    "db:reset-orders": "node scripts/reset-orders-2025.js",
    "db:regenerate-system": "node scripts/regenerate-entire-system-2025.js",
    "db:update-order-numbers": "node scripts/update-order-numbers.js",
    "db:add-discount-fields": "node scripts/add-discount-fields.js",
    "db:add-billing-cycles": "node scripts/add-mock-billing-cycles.js",
    "db:seed-payments": "node scripts/seed-payments.js",
    "db:seed-subscriptions": "node scripts/seed-subscriptions.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@1.22.0",
  "dependencies": {
    "bcryptjs": "^3.0.2"
  }
}
