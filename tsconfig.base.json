{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@rentalshop/ui": ["./packages/ui/src"],
      "@rentalshop/auth": ["./packages/auth/src"],
      "@rentalshop/database": ["./packages/database/src"],
      "@rentalshop/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "**/node_modules"]
} 